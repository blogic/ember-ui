<Header />
<SettingsHeader
  @icon="broadcast-pin"
  @title={{format-message "Network Settings"}}
  @description={{format-message "Manage the settings of your WiFi radios"}}
/>
<BsListGroup class="mb-3" as |ListGroup|>
  <ListGroupNav
    @parent={{ListGroup}}
    @route="authenticated.network.uplink"
    @icon="globe"
  >{{format-message "Internet"}}
  </ListGroupNav>
  <ListGroupNav
    @parent={{ListGroup}}
    @route="authenticated.network.main"
    @icon="wifi"
  >{{format-message "Main Network"}}
  </ListGroupNav>
  <ListGroupNav
    @parent={{ListGroup}}
    @route="authenticated.network.guest"
    @icon="wifi"
  >{{format-message "Guest Network"}}
  </ListGroupNav>
</BsListGroup>