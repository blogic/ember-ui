{{! template-lint-disable no-bare-strings }}
<BsForm
  @formLayout="vertical"
  @model={{this.unit.model}}
  @onSubmit={{this.onSubmit}}
  {{on "change" this.unit.onChange}}
  as |form|
>
  <Header @onSubmit={{form.submit}} @model={{this.unit}} />
  <SettingsHeader @icon="house" @title={{format-message "Device Name"}} />
  <form.element @controlType="text" @property="hostname" as |el|>
    <el.control placeholder={{format-message "Hostname"}} required />
  </form.element>
  <SettingsDescription>
    {{format-message "The name of your device"}}
  </SettingsDescription>
</BsForm>