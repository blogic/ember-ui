{{! template-lint-disable no-bare-strings }}
<BsForm
  @formLayout="vertical"
  @model={{this.wifimain.model}}
  @onSubmit={{this.onSubmit}}
  {{on "change" this.wifimain.onChange}}
  as |form|
>
  <Header @onSubmit={{form.submit}} @model={{this.wifimain}} />
  <SettingsHeader
    @icon="wifi"
    @title={{format-message "Wi-Fi"}}
    @description={{format-message
      "The main Wi-Fi networks provided by your device"
    }}
  />
  <form.element @controlType="text" @property="wifi.ssid" as |el|>
    <el.control placeholder={{format-message "SSID"}} required maxlength="32" />
  </form.element>
  <SettingsDescription>
    {{format-message "The name of the Wi-Fi that you can connect to"}}
  </SettingsDescription>
  <form.element @controlType="password-eye" @property="wifi.key" as |el|>
    <el.control
      placeholder={{format-message "Password"}}
      required
      minlength="8"
      maxlength="64"
    />
  </form.element>
  <SettingsDescription>
    {{format-message "The password that you need to enter to authenticate"}}
  </SettingsDescription>
  <ButtonSelect
    @value={{this.wifimain.model.wifi.security}}
    @value1="compatibility"
    @option1={{format-message "Compatibility"}}
    @value2="maximum"
    @option2={{format-message "Maximum"}}
    class="mb-3"
  />
  {{#if (eq this.wifimain.model.wifi.security "maximum")}}
    <SettingsDescription>
      {{format-message
        "The latest encryption standard will be used. Older devices might not be
      able to connect"
      }}
    </SettingsDescription>
  {{else}}
    <SettingsDescription>
      {{format-message
        "The encryption standard used will allow older devices to connect"
      }}
    </SettingsDescription>
  {{/if}}
  {{#if (eq this.wifimain.model.ipv4.addressing "static")}}
    <form.element
      @controlType="switch"
      @label="Advanced"
      @property="advanced"
    />
    {{#if this.wifimain.model.advanced}}
      <form.element @controlType="text" @property="ipv4.subnet" as |el|>
        <el.control
          placeholder={{format-message "Subnet"}}
          required
          maxlength="32"
        />
      </form.element>
      <SettingsDescription>
        {{format-message "The subnet used by your main wifi"}}
      </SettingsDescription>
    {{/if}}
  {{/if}}
</BsForm>