{{! template-lint-disable no-bare-strings }}
<BsForm
  @formLayout="vertical"
  @model={{this.wifimesh.model}}
  @onSubmit={{this.onSubmit}}
  {{on "change" this.wifimesh.onChange}}
  as |form|
>
  <Header
    @onSubmit={{form.submit}}
    @model={{this.wifimesh}}
  />
  <SettingsHeader
    @title="Backhaul Mesh"
    @description="The backhaul Mesh network that devices can use for connectivity."
  >
    {{#if (eq this.wifimesh.model.disable "false")}}
      <BsIconRound @name="wifi" />
    {{else}}
      <BsIconRound @name="wifi-off" />
    {{/if}}
  </SettingsHeader>
  <ButtonSelect
    @value={{this.wifimesh.model.disable}}
    @value1="false"
    @option1="Enable"
    @value2="true"
    @option2="Disable"
  />
  {{#if (eq this.wifimesh.model.disable "false")}}
    <form.element @controlType="text" @property="ssid" as |el|>
      <el.control placeholder="SSID" required maxlength="32" />
    </form.element>
    <SettingsDescription>
      The name of the Mesh backhaul.
    </SettingsDescription>
    <form.element @controlType="password-eye" @property="key" as |el|>
      <el.control
        placeholder="Password"
        required
        minlength="8"
        maxlength="64"
      />
    </form.element>
    <SettingsDescription>
      The password used to encrypt the Mesh network.
    </SettingsDescription>
  {{else}}
    <SettingsDescription>
      The Mesh backhaul is currently disabled.
    </SettingsDescription>
  {{/if}}
</BsForm>