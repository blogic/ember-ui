<BsForm
  @formLayout="vertical"
  @model={{this.model}}
  @onSubmit={{this.onComplete}}
  {{on "change" this.onChange}}
  as |form|
>
  <Header @onComplete={{form.submit}} @model={{this}} />
  <SettingsHeader
  @icon="key"
  @title={{format-message "Password"}}
  @description={{format-message "Change your login credentials"}}
/>
  <form.element @controlType="password" @property="password" as |el|>
    <el.control
      placeholder={{format-message "Password"}}
      required
      minlength="1"
      maxlength="64"
    />
  </form.element>
  <SettingsDescription>
    {{format-message "Your new password"}}
  </SettingsDescription>
  <form.element @controlType="password" @property="password2" as |el|>
    <el.control
      placeholder={{format-message "Re-type Password"}}
      required
      minlength="1"
      maxlength="64"
    />
  </form.element>
  <SettingsDescription>
    {{format-message "Please confirm the password"}}
  </SettingsDescription>

  {{#if (eq this.bad_password true)}}
    <SettingsDescription class="text-danger">
      {{format-message "The passwords do not match"}}
    </SettingsDescription>
  {{/if}}
</BsForm>
<ModalConfirm
  @header={{format-message "Password change"}}
  @body={{format-message "You are about to change the login password"}}
  @onSubmit={{this.onReallySubmit}}
/>