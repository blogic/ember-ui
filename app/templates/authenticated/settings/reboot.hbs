<Header />
<SettingsHeader
  @icon="arrow-counterclockwise"
  @title={{format-message "Reboot"}}
  @description={{format-message
    "The device will reboot. During this time you will loose internet connectivity"
  }}
/>
<ActionSplash
  @icon="arrow-counterclockwise"
  @onClick={{this.onSubmit}}
  class="text-danger"
/>
<ModalConfirm
  @header={{format-message "Reboot device"}}
  @body={{format-message "You are about to reboot the device"}}
  @onSubmit={{this.onReboot}}
/>