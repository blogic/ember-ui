<BsForm
  @formLayout="vertical"
  @model={{this.unit.model}}
  @onSubmit={{this.onSubmit}}
  {{on "change" this.unit.onChange}}
  as |form|
>
  <Header
    @onSubmit={{form.submit}}
    @model={{this.unit}}
  />
  <SettingsHeader @icon="house" @title="Device Name" />
  <form.element @controlType="text" @property="hostname" as |el|>
    <el.control placeholder="Hostname" required />
  </form.element>
  <SettingsDescription>
    The name of your device.
  </SettingsDescription>
</BsForm>