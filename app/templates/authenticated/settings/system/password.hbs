<SettingsHeader
  @icon="key"
  @title="Password"
  @description="Change your login credentials"
/>
<BsForm
  @formLayout="vertical"
  @model={{this.model}}
  @onSubmit={{this.onComplete}}
  {{on "change" this.onChange}}
  as |form|
>
  <Header
    @onComplete={{form.submit}}
    @model={{this}}
  />
  <form.element @controlType="password" @property="password" as |el|>
    <el.control placeholder="Password" required minlength="1" maxlength="64" />
  </form.element>
  <SettingsDescription>
    Your new password.
  </SettingsDescription>
  <form.element @controlType="password" @property="password2" as |el|>
    <el.control
      placeholder="Re-type Password"
      required
      minlength="1"
      maxlength="64"
    />
  </form.element>
  <SettingsDescription>
    Please confirm the password.
  </SettingsDescription>

  {{#if (eq this.bad_password true)}}
    <SettingsDescription class="text-danger">
      The passwords do not match.
    </SettingsDescription>
  {{/if}}
</BsForm>
<ModalConfirm
  @header="Password change"
  @body="You are about to change the login password"
  @onSubmit={{this.onReallySubmit}}
/>