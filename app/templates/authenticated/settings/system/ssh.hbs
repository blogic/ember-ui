<BsForm
  @formLayout="vertical"
  @model={{this.ssh.model}}
  @onSubmit={{this.onSubmit}}
  {{on "change" this.ssh.onChange}}
  as |form|
>
  <Header @onSubmit={{form.submit}} @model={{this.ssh}} />
  <SettingsHeader @icon="house-lock" @title="SSH">
    <BsIconRound @name="house-lock" />
  </SettingsHeader>
  <ButtonSelect
    @value={{this.ssh.model.iface.enable}}
    @value1="true"
    @option1="Enable"
    @value2="false"
    @option2="Disable"
    class="mb-4"
  />
{{this.ssh.model.iface.enable}}
  {{#if (eq this.ssh.model.iface.enable "false")}}
    <SettingsDescription>
      The SSH server is disabled
    </SettingsDescription>
  {{else}}
    <form.element @controlType="textarea" @property="authorized-key" as |el|>
      <el.control placeholder="SSH public key" required />
    </form.element>
    <SettingsDescription>
      The SSH key used to login.
    </SettingsDescription>
  {{/if}}
</BsForm>