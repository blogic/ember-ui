{{! template-lint-disable no-bare-strings }}
<BsForm
  @formLayout="vertical"
  @model={{this.netmain.model}}
  @onSubmit={{this.onSubmit}}
  {{on "change" this.netmain.onChange}}
  as |form|
>
  <Header @onSubmit={{form.submit}} @model={{this.netmain}} />
  <SettingsHeader
    @icon="wifi"
    @title={{format-message "Wi-Fi"}}
    @description={{format-message
      "The main Wi-Fi networks provided by your device"
    }}
  />
  <form.element @controlType="text" @property="wifi.ssid" as |el|>
    <el.control placeholder={{format-message "SSID"}} required maxlength="32" />
  </form.element>
  <SettingsDescription>
    {{format-message "The name of the Wi-Fi that you can connect to"}}
  </SettingsDescription>
  <form.element @controlType="password-eye" @property="wifi.key" as |el|>
    <el.control
      placeholder={{format-message "Password"}}
      required
      minlength="8"
      maxlength="64"
    />
  </form.element>
  <SettingsDescription>
    {{format-message "The password that you need to enter to authenticate"}}
  </SettingsDescription>
  <ButtonSelect
    @value={{this.netmain.model.wifi.security}}
    @value1="compatibility"
    @option1={{format-message "Compatibility"}}
    @value2="maximum"
    @option2={{format-message "Maximum"}}
    class="mb-3"
  />
  {{#if (eq this.netmain.model.wifi.security "maximum")}}
    <SettingsDescription>
      {{format-message
        "The latest encryption standard will be used. Older devices might not be
      able to connect"
      }}
    </SettingsDescription>
  {{else}}
    <SettingsDescription>
      {{format-message
        "The encryption standard used will allow older devices to connect"
      }}
    </SettingsDescription>
  {{/if}}
</BsForm>
<BsListGroup class="mb-3" as |ListGroup|>
  <ListGroupNav
    @parent={{ListGroup}}
    @route="authenticated.network.main"
    @icon="gear"
  >{{format-message "Advanced Settings"}}</ListGroupNav>
 </BsListGroup>