{{#if (eq this.uconfig.status "pending")}}
  <ActionSplash @icon="gear" @onClick={{this.commit}} class="text-success" />
  <ButtonFooter>
    <BsButton @onClick={{this.commit}} @type="primary">Apply changes</BsButton>
    <BsButton @onClick={{this.reset}} @type="primary">Reset changes</BsButton>
    <BsButton @onClick={{this.back}} @type="primary">Cancel</BsButton>
  </ButtonFooter>
{{else if (eq this.uconfig.status "applying")}}
  <ActionSplash
    @icon="gear"
    @description="Applying changes ..."
    class="text-success rotating"
  />
{{else if (eq this.uconfig.status "clean")}}
  <ActionSplash
    @icon="check-circle"
    @route="authenticated.dashboard"
    @description="Changes applied !"
    class="text-success"
  />
{{/if}}