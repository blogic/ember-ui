{{#if (eq this.uconfig.authenticated "login-required")}}
  <NotificationContainer @position="top-right" @zindex="9999" />
  <SettingsHeader @icon="person-circle" @title={{format-message "Login"}} />
  <BsForm
    @formLayout="vertical"
    @model={{this}}
    @onSubmit={{this.submit}}
    as |form|
  >
    <form.element @controlType="password" @property="password" as |el|>
      <el.control placeholder={{format-message "Password"}} required />
    </form.element>
    <SettingsDescription>
      {{format-message "Please enter your password"}}
    </SettingsDescription>
    <ButtonFooter>
      <form.submitButton>{{format-message "Submit"}}</form.submitButton>
    </ButtonFooter>
  </BsForm>
{{else}}
  <ActionSplash
    @icon="router"
    @description={{format-message "Connecting ..."}}
    class="text-primary"
  />
{{/if}}