{{#if (or (has-block) @description)}}
  <div class="row align-items-start d-flex">
    <div class="col-4 text-end mw-50">
      {{@title}}
    </div>
    <div class="col-4 text-start mw-50" ...attributes>
      {{#if (has-block)}}
        {{yield}}
      {{else}}
        {{@description}}
      {{/if}}
    </div>
  </div>
{{/if}}