<SettingsHeader
  @icon="router"
  @title={{format-message "Mode"}}
  @description={{format-message "Please choose the mode of the device."}}
/>
<ButtonSelect
  @value={{@model.mode}}
  @value1="configurable"
  @option1={{format-message "Configurable"}}
  @value2="managed"
  @option2={{format-message "Managed"}}
  class="mb-3"
/>
{{#if (eq @model.mode "configurable")}}
  <SettingsDescription>
    {{format-message
      "You will be able to configure the device via the webui. Configuration can
    optionally be distributed to managed devices."
    }}
  </SettingsDescription>
{{else}}
  <SettingsDescription>
    {{format-message
      "The device will be managed by another configurable device"
    }}
  </SettingsDescription>
{{/if}}
<ButtonFooter>
  <BsButton @onClick={{@onSubmit}} @type="primary">{{format-message
      "Continue"
    }}</BsButton>
</ButtonFooter>