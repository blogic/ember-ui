{{! template-lint-disable no-bare-strings }}
<SettingsHeader
  @icon="clock"
  @title={{format-message "Timezone"}}
  @description={{format-message "Please pick the timezone you are in"}}
/>
<BsForm @formLayout="vertical" @model={{@model}} as |form|>
  <form.element
    @controlType="power-select"
    @property="timezone"
    @options={{@timezone}}
  />
  <SettingsDescription>
    {{format-message
      "The default value was automatically detected from your browser settings"
    }}
  </SettingsDescription>
  <ButtonFooter>
    <BsButton @onClick={{@onSubmit}} @type="primary">{{format-message
        "Continue"
      }}</BsButton>
  </ButtonFooter>
</BsForm>