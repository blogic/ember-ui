  <BsForm
    @formLayout="vertical"
    @model={{@model}}
    @onSubmit={{@onSubmit}}
    {{on "change" @onChange}}
    as |form|
  >
    <SettingsHeader
      @icon="key"
      @title="Password"
      @description="Setup your login credentials"
    />
    <form.element @controlType="password" @property="password" as |el|>
      <el.control
        placeholder="Password"
        required
        minlength="1"
        maxlength="64"
      />
    </form.element>
    <SettingsDescription>
      Your new password.
    </SettingsDescription>
    <form.element @controlType="password" @property="password2" as |el|>
      <el.control
        placeholder="Re-type Password"
        required
        minlength="1"
        maxlength="64"
      />
    </form.element>
    <SettingsDescription>
      Please confirm the password.
    </SettingsDescription>
    {{#if (eq @bad_password true)}}
      <SettingsDescription class="text-danger">
        The passwords do not match.
      </SettingsDescription>
    {{/if}}
    <ButtonFooter>
      <BsButton @onClick={{form.submit}} @type="primary">Continue</BsButton>
    </ButtonFooter>
  </BsForm>
