{{! template-lint-disable no-bare-strings }}
<BsForm
  @formLayout="vertical"
  @model={{@model}}
  @onSubmit={{@onSubmit}}
  {{on "change" @onChange}}
  as |form|
>
  <SettingsHeader
    @icon="key"
    @title={{format-message "Password"}}
    @description={{format-message "Setup your login credentials"}}
  />
  <form.element @controlType="password" @property="password" as |el|>
    <el.control
      placeholder={{format-message "Password"}}
      required
      minlength="1"
      maxlength="64"
    />
  </form.element>
  <SettingsDescription>
    {{format-message "Your new password"}}
  </SettingsDescription>
  <form.element @controlType="password" @property="password2" as |el|>
    <el.control
      placeholder={{format-message "Re-type Password"}}
      required
      minlength="1"
      maxlength="64"
    />
  </form.element>
  <SettingsDescription>
    {{format-message "Please confirm the password"}}
  </SettingsDescription>
  {{#if (eq @bad_password true)}}
    <SettingsDescription class="text-danger">
      {{format-message "The passwords do not match"}}
    </SettingsDescription>
  {{/if}}
  <ButtonFooter>
    <BsButton @onClick={{form.submit}} @type="primary">{{format-message
        "Continue"
      }}</BsButton>
  </ButtonFooter>
</BsForm>