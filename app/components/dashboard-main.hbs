{{! template-lint-disable no-bare-strings }}
<DashboardHeader @title={{format-message "Network Settings"}} />
<SettingsDescription>
  Your WiFi is up and running
</SettingsDescription>
<BsListGroup class="mb-3" as |ListGroup|>
  <ListGroupNav
    @parent={{ListGroup}}
    @route="authenticated.qrcode"
    @icon="qr-code"
  >QR Code</ListGroupNav>
  <ListGroupNav
    @parent={{ListGroup}}
    @onClick={{@onDevices}}
    @icon="fingerprint"
  >Connected Devices</ListGroupNav>
  <ListGroupNav
    @parent={{ListGroup}}
    @onClick={{fn @onManaged "list"}}
    @icon="router"
  >Managed Devices</ListGroupNav>
  <ListGroupNav
    @parent={{ListGroup}}
    @onClick={{@onUsers}}
    @icon="people"
  >Users</ListGroupNav>
</BsListGroup>
<BsListGroup class="mb-3" as |ListGroup|>
  <ListGroupNav
    @parent={{ListGroup}}
    @route="authenticated.settings.wifi.main"
    @icon="wifi"
  >WiFi</ListGroupNav>
  <ListGroupNav
    @parent={{ListGroup}}
    @route="authenticated.settings.wifi.guest"
    @icon={{if (eq @wifiguest.model.iface.disable "false") "wifi" "wifi-off"}}
  >{{format-message "Guest WiFi"}}</ListGroupNav>
  <ListGroupNav
    @parent={{ListGroup}}
    @route="authenticated.settings.wifi.mesh"
    @icon={{if (eq @wifimesh.model.disable "false") "wifi" "wifi-off"}}
  >{{format-message "Mesh Backhaul"}}</ListGroupNav>
  <ListGroupNav
    @parent={{ListGroup}}
    @onClick={{fn @onRadio "list"}}
    @icon="broadcast-pin"
  >{{format-message "Radio settings"}}</ListGroupNav>
</BsListGroup>