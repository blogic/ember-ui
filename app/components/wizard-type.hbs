{{! template-lint-disable no-bare-strings }}
<SettingsHeader
  @icon="router"
  @title={{format-message "Mode"}}
  @description={{format-message "Please choose the configuration type"}}
/>
<ButtonSelect
  @value={{@model.type}}
  @value1="router"
  @option1={{format-message "Router"}}
  @value2="ap"
  @option2={{format-message "Access Point"}}
  class="mb-3"
/>
{{#if (eq @model.type "router")}}
  <SettingsDescription>
    {{format-message
      "The device will will be able to route your local traffic to the internet"
    }}
  </SettingsDescription>
{{else}}
  <SettingsDescription>
    {{format-message "The device will act as a simple Access Point"}}
  </SettingsDescription>
{{/if}}
<ButtonFooter>
  <BsButton @onClick={{@onSubmit}} @type="primary">{{format-message
      "Continue"
    }}</BsButton>
</ButtonFooter>